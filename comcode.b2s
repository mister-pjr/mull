CLR: ! CLEAR TERMINAL
	PRINT ESC+"[2J"
	RETURN

INVERT: ! INVERT NEXT CHAR
	PRINT ESC+"[7m"
	RETURN

NORMAL: ! NORMALIZE NEXT CHAR
	PRINT ESC+"[0m"
	RETURN

DEF BYTE PXY (BYTE X, Y, STRING TEXT) ! PRINT AT X,Y
	PRINT ESC+"["+STR$(Y)+";"+STR$(X)+"H"+TEXT
	PXY = 0
	END DEF 

DEF BYTE SETXY (BYTE X, Y) ! SET CURSOR AT X,Y
	PRINT ESC+"["+STR$(Y)+";"+STR$(X)+"H"
	SETXY=0
	END DEF
